<h1>Books</h1>
<table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show",show_books_path(book.id) %></td>
      <td><%= link_to "Edit",edit_books_path(book.id)%></td>
      <td><%= link_to "Destroy",destroy_books_path(book.id), method: :delete  %></td>
    </tr>
  <% end %>
  </table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %>
<%= f.submit "Create Book" %>
<% end %>