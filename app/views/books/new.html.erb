<div class="new">
  <%= flash[:delete] %>
<h1 class="index-title"><strong>Books</strong></h1>
<table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show",show_books_path(book.id) %></td>
      <td><%= link_to "Edit",edit_books_path(book.id)%></td>
      <td><%= link_to "Destroy",destroy_books_path(book.id), method: :delete  %></td>
    </tr>
  <% end %>
  </table>

<h2 class="new-title"><strong>New book</strong></h2>
<%= form_for(@book) do |f| %>

  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><strong><%= @book.errors.count %>errors prohibited this book from being saved:</strong></h2>
      <ul>
      <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <% end %>
      </ul>
    </div>

    <% end %>
<div class="field">
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :body, "Body" %>
  <%= f.text_area :body %>
</div>
  <%= f.submit "Create Book" %>
<% end %>
</div>