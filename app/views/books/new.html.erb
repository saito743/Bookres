<%= flash[:delete] %>
<h1><strong>Books</strong></h1>
<table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show",show_books_path(book.id) %></td>
      <td><%= link_to "Edit",edit_books_path(book.id)%></td>
      <td><%= link_to "Destroy",destroy_books_path(book.id), method: :delete  %></td>
    </tr>
  <% end %>
  </table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div>
      <p><%= @book.errors.count %>errors prohibited this book from being saved:</p>
      <% @book.errors.full_messages.each do |msg| %>
        <ul><li><%= msg %></li></ul>
      <% end %>
    </div>
    <% end %>
<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %>
<%= f.submit "Create Book" %>
<% end %>